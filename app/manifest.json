{
    "name": "Signy",
    "description": "lets other apps securely sign messages without being exposed to the user's private keys",
    "version": "0.1.1",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "background.js",
                "scripts/chromereload.js"
            ],
            "persistent": false
        }
    }
}
